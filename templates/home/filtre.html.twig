{% extends 'base.html.twig' %}

{% block title %}Edit Article
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<h1 class="text-center display-1">Home sweet Home</h1>
			<div
				class="row">
				{# navbar #}
				{% for categorie in categories %}
					<a href="{{ path('user_articles_filtre', { 'id' : categorie.id }) }}" class="btn btn-primary">{{ categorie.name }}</a>
				{% endfor %}
			</div>
			{% for article in articles %}
				<div class="col-6">
					<div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
						<div class="col p-4 d-flex flex-column position-static">
							<strong class="d-inline-block mb-2 text-success">{{ article.titre }}</strong>
							<h3 class="mb-0">{{ article.titre }}</h3>
							<div class="mb-1 text-muted">Nov 11</div>
							<p class="mb-auto">{{ article.contenu }}</p>
							<a href="{{ path('user_article_show' , { 'id' : article.id }) }}" class="stretched-link">Lire la suite
							</a>
							<p>{{ article.auteur.email }}</p>
						</div>
						<div class="col-auto d-none d-lg-block">
							<img src="{{ asset('photos/' ~ article.photo) }}" alt="">
						</div>
					</div>
				</div>
			{% endfor %}
		</div>

	</div>


{% endblock %}
