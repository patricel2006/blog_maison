{% extends 'base.html.twig' %}

{% block title %}Article
{% endblock %}

{% block body %}
	<h1>Article</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ article.id }}</td>
			</tr>
			<tr>
				<th>Titre</th>
				<td>{{ article.titre }}</td>
			</tr>
			<tr>
				<th>Contenu</th>
				<td>{{ article.contenu }}</td>
			</tr>
			<tr>
				<th>Created_At</th>
				<td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Photo</th>
				<td><img src="{{ asset('photos/' ~ article.photo )}}" style="width: 100px" "height: 100px" alt=""></td>

			</tr>
		</tbody>
	</table>

	{# chargement de l'image #}
	<div class="row">
		{{ form_start(form) }}
		{{ form_widget(form) }}
		<button class="btn">{{ button_label|default('Save') }}</button>
		{{ form_end(form) }}
	</div>

	{# affichage de l'image #}
	{% for picture in article.pictures %}
		<p><img src="{{ asset('photos/' ~ picture.name) }}" alt="" style="width:100px"></p>
		{{ include('picture/_delete_form.html.twig') }}
	{% endfor %}


	<a href="{{ path('app_article_index') }}">back to list</a>

	<a href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a>

	{{ include('article/_delete_form.html.twig') }}
{% endblock %}
